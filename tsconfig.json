{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "composite": true,
    "module": "NodeNext",
    "target": "es2020",
    "lib": ["ESNext"],
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "removeComments": true
  }
}
